<%= render 'shared/second_header' %>

<div class="login_page">
  <div class="login_form">
    <h2 class="login_title">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render "users/shared/error_messages", resource: resource %>

        <div class="text_field">
          <div class="field_title">プロフィール画像</div>
          <%= f.file_field :image, id:"item-image" %>
        </div>

        <div class="text_field">
          <div class="field_title">ニックネーム</div>
          <%= f.text_field :nickname, placeholder: "例) book太郎", class:"form_field" %>
        </div>

        <div class="text_field">
          <div class="field_title">メールアドレス</div>
          <%= f.text_field :email, placeholder: "例) book@com", class:"form_field" %>
        </div>

        <div class="text_field">
          <div class="field_title">パスワード</div>
          <%= f.password_field :password, placeholder: "6文字以上の半角英数字", class:"form_field" %>
        </div>

        <div class= "text_field">
          <div class="field_title">パスワード（確認）</div>
          <%= f.password_field :password_confirmation, placeholder: "同じパスワードを入力してください", class:"form_field"  %>
        </div>

        <div class="text_field">
          <div class="field_title">年齢</div>
          <%= f.text_field :age, placeholder: "半角数字で入力", class:"form_field"  %>
        </div>

        <div class="text_field">
          <div class="field_title">職種</div>
          <%= f.collection_select :job_id, Job.all, :id, :name, {}, {class:"select_box"} %>
        </div>

        <div class="text_field">
          <div class="field_title">性別</div>
          <%= f.collection_select :gender_id, Gender.all, :id, :name, {}, {class:"select_box"} %>
        </div>

        <div class="text_field">
          <div class="field_title">自己紹介</div>
          <%= f.text_area :introduce, placeholder: "例) 初めまして。読書が大好きで毎日本を持ち歩いています。年間で100冊ほど読みます。よろしくお願いします！", class:"form_field"  %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"login_btn" %>
        </div>
      <% end %>
  </div>
</div>

<%= render 'shared/footer' %>

