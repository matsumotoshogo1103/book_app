<%= render 'shared/second_header' %>

<div class="session_page">
  <div class="form_page">
    <div class="forms">
      <h2 class="form_title">Log in</h2>

      <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true  do |f| %>

      <%# <%- flash.each do |name, msg| -%>
      <%# <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %> 
      <%# <%- end -%> 

        <div class="form_field">
          <div class="field_title">メールアドレス</div>
          <%= f.email_field :email, placeholder: "例) book@com", class:"form" %>
        </div>

        <div class="form_field">
          <div class="field_title">パスワード</div>
          <%= f.password_field :password, placeholder: "6文字以上の半角英数字", class:"form" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class:"form_btn", id:"form_btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>
